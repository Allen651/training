body {
	width: 100%;
	margin: 0;
	padding: 0;
	background-color: white;
}

.bbohu-index .header .banner {
	background-image: url(../img/bbohubanner.png);
	background-size: 100% 100%;
	height: 590px;
	padding: 30px;
	min-width: 1400px;
}

.bbohu-index .header .banner .top-bar {
	display: flex;
	justify-content: space-between;
	width: 1200px;
	margin: auto;
	align-items: center;
}

.bbohu-index .header .banner .top-bar .logo {
	height: 40px;
}

.bbohu-index .header .banner .top-bar .my-tab div.active {
	border-bottom: 1px solid white;
}

.bbohu-index .header .banner .top-bar .my-tab div {
	display: inline-block;
	vertical-align: middle;
	margin: 0 28px;
	padding: 8px 0;
	color: white;
	font-size: 18px;
}

.bbohu-index .header .banner .top-bar .tel {
	background: -webkit-linear-gradient( left,#5db3ff, #61bfff);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right,#5db3ff, #61bfff);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right,#5db3ff, #61bfff);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(to right,#5db3ff, #61bfff);
	/* 标准的语法 */
	font-size: 18px;
	color: white;
	padding: 8px 15px;
	border-radius: 3px;
}
.bbohu-index .header .banner .top-bar .tel img{
	width: 18px;
	vertical-align: middle;
	margin-right: 3px;
	margin-top: -3px;
}
.bbohu-index .header .banner .content{
	width: 1200px;
	margin: auto;
	margin-top: 100px;
}
.bbohu-index .header .banner .content .title h1{
	font-size: 40px ;
	color: #3e495c;
	margin-bottom: 26px;
}
.bbohu-index .header .banner .content .title p{
	width: 400px;
	font-size: 18px;
	color: #6b7a93;
	line-height: 34px;
	margin-bottom: 60px;
}
.bbohu-index .header .banner .content .login-box input[type=password],.bbohu-index .header .banner .content .login-box  input[type=text]{
	width: 320px;
	border: 1px solid #bcc7e0;
	height: 46px;
	margin-bottom: 25px;
	border-radius: 5px;
	font-size: 16px ;
	color: #3e495c;
}
.bbohu-index .header .banner .content .login-box input.in{
	border: 1px solid #3e495c;
	box-shadow: 0 0 10px 3px  #c7d1e5;
}
.bbohu-index .header .banner .content .login-box button{
	font-size: 18px;
	color: white;
	padding:10px 45px ;
	background: -webkit-linear-gradient( left,#fb525e, #fb6b4e);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right,#fb525e, #fb6b4e);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right,#fb525e, #fb6b4e);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(to right,#fb525e, #fb6b4e);
	/* 标准的语法 */
	border: none;
	border-radius: 5px;
}
.bbohu-index .main{
	padding-top:50px ;
}
.bbohu-index .main .content{
	background-image: url(../img/bbhbeijing.png);
	/*background-size: 100% 380px;*/
	background-repeat: no-repeat;
	background-position: bottom;
	padding: 50px 0;
}
.bbohu-index .main .content .title{
	min-width: 1200px;
	text-align: center;
}
.bbohu-index .main .content .title .hongxian{
	display: inline-block;
	width: 38px;	
	height: 6px;
	border-radius: 5px;
	background: -webkit-linear-gradient( left,#fb525e, #fb6b4e);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right,#fb525e, #fb6b4e);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right,#fb525e, #fb6b4e);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(to right,#fb525e, #fb6b4e);
	/* 标准的语法 */
	margin-bottom:10px;
}
.bbohu-index .main .content .title h2{
	font-size: 30px;
	color: #303030;
	margin: 20px;
}
.bbohu-index .main .content .title h2 span{
	display: inline-block;
	margin: 20px;
	font-size: 20px;
	font-weight: normal;
}
.bbohu-index .main .content .module{
	padding: 40px 0;
	width: 1200px;
	margin: auto;
}
.bbohu-index .main .content .module>div{
	display: inline-block;
	width:545px;
	vertical-align: top;
}
.bbohu-index .main .content .module .left{
	width:610px;
	margin-right: 40px;
}
.bbohu-index .main .content .module>div h3{
	margin: 30px 0;
	font-size: 20px;
	color:#3e495c;
}
.bbohu-index .main .content .module>div p{
	font-size: 18px;
	color: #6B7A93;
	line-height: 34px;
}
.bbohu-index .main .content .module .zhaomu {
	position: relative;
	left: 40px;
}
.bbohu-index .main .content .module .zhaomu span{
	position: absolute;
	top: 55px;
	left: 18px;
	color: white;
	font-size: 20px;
}
.bbohu-index .main .content .module+.module{
	border-top: 1px solid #eff4fb;
}
.bbohu-index .main .content .module.active>div h3,.bbohu-index .main .content .module.active>div p{
	color: #256ae2;
}
.bbohu-index .main .content .module.active>div img{
	border-radius: 10px;
	box-shadow: 0 0 30px 10px #f1f5ff;
}
.bbohu-index .main .pingtai .title{
	min-width: 1200px;
	text-align: center;
}
.bbohu-index .main .pingtai .title .hongxian{
	display: inline-block;
	width: 38px;	
	height: 6px;
	border-radius: 5px;
	background: -webkit-linear-gradient( left,#fb525e, #fb6b4e);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right,#fb525e, #fb6b4e);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right,#fb525e, #fb6b4e);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(to right,#fb525e, #fb6b4e);
	/* 标准的语法 */
	margin-bottom:10px;
}
.bbohu-index .main .pingtai .title h2{
	font-size: 30px;
	color: #303030;
	margin: 20px;
}
.bbohu-index .main .pingtai .title h2 span{
	display: inline-block;
	margin: 20px;
	font-size: 20px;
	font-weight: normal;
}
/*sweper*/
.bbohu-index .main .pingtai .swiper-container{
	width:1230px;
	margin: 60px auto;
	padding:15px;
}
.bbohu-index .main .pingtai .swiper-container .logobox{
	display: inline-block;
	width: 235px;
	height: 170px;
	margin: 30px;
	border-radius:10px;
	box-shadow: 0 0 20px 5px #f1f5ff;
	position: relative;
}
.bbohu-index .main .pingtai .swiper-container .logobox img{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
}
.bbohu-index .main .pingtai .swiper-container .logobox .ming{
	display: none;
	position: absolute;
	bottom: 0;
	width: 100%;
	line-height: 48px;
	color: white;
	background-color: rgb(156,192,243);
	text-align: center;
	border-bottom-left-radius:10px ;
	border-bottom-right-radius:10px ;
}
/*sweper*/
.bbohu-index  .footer{
	background-color: #f3f8fc;
}
.bbohu-index  .footer .content{
	width: 1080px;
	margin: auto;
	padding:60px 0;
}
.bbohu-index  .footer .content .left{
	width: 280px;
	display: inline-block;
	vertical-align: middle;
}
.bbohu-index  .footer .content .left .hongxian{
	display: inline-block;
	width: 60px;	
	height: 4px;
	border-radius: 5px;
	background: -webkit-linear-gradient( left,#fb525e, #fb6b4e);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right,#fb525e, #fb6b4e);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right,#fb525e, #fb6b4e);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(to right,#fb525e, #fb6b4e);
	/* 标准的语法 */
	margin-bottom:10px;
}
.bbohu-index  .footer .content .left span{
	display: inline-block;
	margin-bottom:10px;
	font-size: 14px;
	font-weight: normal;
}
.bbohu-index  .footer .content .left h4{
	margin-bottom:30px;
}
.bbohu-index  .footer .content .left p{
	color: #303030;
	line-height: 34px;
	margin-bottom: 30px;
}
.bbohu-index  .footer .content .left img{
	height: 30px;
	width: 30px;
	margin-right: 20px;
}
.bbohu-index  .footer .content .right{
	display: inline-block;
	vertical-align: middle;
}

.bbohu-index  .footer .content .right{
	
}

.bbohu-index  .footer .copy{
	background-color: #39465c;
	text-align: center;
	height: 88px;
	line-height: 88px;
	font-size: 14px;
	color: #a5b1c5;
}
